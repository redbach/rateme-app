<% layout('layout2') %>



<div id="wrapper">

    <% include ../partials/sidebar %>

    <div id="page-content-wrapper">
        <% include ../partials/navbar %>
        <div class="container-fluid main_body">
            <div class="ul_links">
                <ul>
                    <li><a href="/">Home</a></li> |
                    <li><a href="/companies">All Companies</a></li> |
                    <li><a href="#">Leaderboard</a></li>
                </ul>
            </div>

            <div class="bodyDiv">
                <h4 style="">Top Rated Companies</h4>
                

                <% for(var i = 0; i < data.length; i++) { %>

                    <% var index = _.indexOf(data, data[i]) %>


                    <div class="companyListDiv">
                        <a href="/company-profile/<%= data[i]._id %>">
                            <img src="/uploads/<%= data[i].image %>" class="companyListItemLogo">

                            <div class="companyListItemInfo">
                                <h5># <%= index + 1 %></h5>
                                <h5 class=""><%= data[i].name %></h5>
                                <span class="">
                                    [ <%= data[i].companyRating.length %> ]
                                </span><br>
    
                                
                            </div>

                        </a>
                    </div>
                <% } %>
                    

            </div>
        </div>
    </div>

</div>